<?xml version="1.0" encoding="UTF-8"?>
<!--inherited to add quantity in  each product card-->
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.ProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-information-tag')]" position="replace">
            <div class="shadow-sm m-1 py-1 px-2 rounded position-absolute top-0 end-0"
                 t-attf-class="{{ this.props.product.qty_available === 0 ? 'bg-danger text-white' : 'bg-white'}}">
                <span t-esc="this.props.product.qty_available"/>
            </div>
        </xpath>
    </t>
</templates>